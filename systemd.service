[Unit]
Description=valheim
Wants=network.target
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
User=valheim
Group=valheim

WorkingDirectory=/opt/valheim
Environment="LD_LIBRARY_PATH=./linux64:$LD_LIBRARY_PATH"
Environment="SteamAppId=892970"
ExecStart=/opt/valheim/valheim_server.x86_64 -name "aemyers" -port 2456 -world "world" -public 0

KillSignal=SIGINT

Nice=5
